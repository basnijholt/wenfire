<!-- Enhanced Parameter Change Component -->
<div class="parameter-change mb-3">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-edit me-2"></i>
                <strong>Parameter Change</strong>
            </div>
            <button type="button" class="btn btn-outline-danger btn-sm remove-parameter-change"
                    hx-delete="/remove-parameter-change"
                    hx-target="closest .parameter-change"
                    hx-swap="outerHTML"
                    hx-push-url="false"
                    aria-label="Remove Parameter Change"
                    title="Remove this parameter change">
                <i class="fas fa-trash-alt me-1"></i>
                Remove
            </button>
        </div>
        <div class="card-body">
            <!-- Date/Time Section -->
            <div class="mb-4">
                <h6 class="text-muted mb-3">
                    <i class="fas fa-clock me-2"></i>
                    When This Change Takes Effect
                </h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="change_dates_{{ uuid }}" class="form-label">
                            <i class="fas fa-calendar me-1"></i>
                            Effective Date
                        </label>
                        <input type="date"
                               name="change_dates"
                               id="change_dates_{{ uuid }}"
                               value="{{ date }}"
                               required
                               class="form-control date-input"
                               data-uuid="{{ uuid }}">
                        <small class="form-help">Specific date when change occurs</small>
                    </div>

                    <div class="col-md-6">
                        <label for="years_from_now_{{ uuid }}" class="form-label">
                            <i class="fas fa-hourglass-half me-1"></i>
                            Years from Now
                        </label>
                        <input type="number"
                               step="0.1"
                               min="0"
                               id="years_from_now_{{ uuid }}"
                               class="form-control years-input"
                               data-uuid="{{ uuid }}"
                               placeholder="0">
                        <small class="form-help">How many years from today</small>
                    </div>
                </div>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-sync-alt me-1"></i>
                        These fields are automatically synchronized
                    </small>
                </div>
            </div>

            <!-- Parameter Change Section -->
            <div class="mb-3">
                <h6 class="text-muted mb-3">
                    <i class="fas fa-cog me-2"></i>
                    What to Change
                </h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="change_fields_{{ uuid }}" class="form-label">
                            <i class="fas fa-list me-1"></i>
                            Parameter to Change
                        </label>
                        <select name="change_fields"
                                id="change_fields_{{ uuid }}"
                                class="form-control"
                                required>
                            <option value="">Select a parameter...</option>
                            <option value="growth_rate" {% if field=="growth_rate" %}selected{% endif %}>
                                ðŸ“ˆ Investment Growth Rate (%)
                            </option>
                            <option value="spending_per_month" {% if field=="spending_per_month" %}selected{% endif %}>
                                ðŸ›’ Monthly Spending ($)
                            </option>
                            <option value="inflation" {% if field=="inflation" %}selected{% endif %}>
                                ðŸ’° Inflation Rate (%)
                            </option>
                            <option value="annual_salary_increase" {% if field=="annual_salary_increase" %}selected{% endif %}>
                                ðŸ“Š Annual Salary Increase (%)
                            </option>
                            <option value="income_per_month" {% if field=="income_per_month" %}selected{% endif %}>
                                ðŸ’µ Monthly Income ($)
                            </option>
                            <option value="extra_income" {% if field=="extra_income" %}selected{% endif %}>
                                ðŸ’Ž Extra Monthly Income ($)
                            </option>
                        </select>
                        <small class="form-help">Which financial parameter will change</small>
                    </div>

                    <div class="col-md-6">
                        <label for="change_values_{{ uuid }}" class="form-label">
                            <i class="fas fa-edit me-1"></i>
                            New Value
                        </label>
                        <input type="number"
                               step="0.1"
                               name="change_values"
                               id="change_values_{{ uuid }}"
                               value="{{ value }}"
                               class="form-control"
                               required
                               placeholder="Enter new value">
                        <small class="form-help">The new value for this parameter</small>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Tip:</strong> Use parameter changes to model life events like salary increases,
                lifestyle changes, or economic shifts that might affect your FIRE journey.
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    const uuid = '{{ uuid }}';
    const dateInput = document.getElementById('change_dates_' + uuid);
    const yearsInput = document.getElementById('years_from_now_' + uuid);

    // Function to calculate years from now based on date
    function dateToYearsFromNow(dateString) {
        if (!dateString) return '';
        const selectedDate = new Date(dateString);
        const today = new Date();
        const diffTime = selectedDate - today;
        const diffYears = diffTime / (1000 * 60 * 60 * 24 * 365.25);
        return Math.max(0, diffYears).toFixed(1);
    }

    // Function to calculate date based on years from now
    function yearsFromNowToDate(years) {
        if (!years || years === '') return '';
        const today = new Date();
        const futureDate = new Date(today.getTime() + (parseFloat(years) * 365.25 * 24 * 60 * 60 * 1000));
        return futureDate.toISOString().split('T')[0];
    }

    // Initialize years field based on existing date
    if (dateInput.value) {
        yearsInput.value = dateToYearsFromNow(dateInput.value);
    }

    // Sync years when date changes
    dateInput.addEventListener('change', function() {
        yearsInput.value = dateToYearsFromNow(this.value);
    });

    // Sync date when years changes
    yearsInput.addEventListener('input', function() {
        dateInput.value = yearsFromNowToDate(this.value);
    });
})();
</script>
