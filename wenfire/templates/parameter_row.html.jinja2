<!-- Individual Parameter Row -->
<div class="parameter-row mb-3">
    <div class="row g-3">
        <div class="col-md-5">
            <label class="form-label">
                <i class="fas fa-list me-1"></i>
                Parameter to Change
            </label>
            <select name="change_fields" class="form-control" required>
                <option value="">Select parameter...</option>
                <option value="growth_rate" {% if field=="growth_rate" %}selected{% endif %}>
                    ðŸ“ˆ Investment Growth Rate (%)
                </option>
                <option value="spending_per_month" {% if field=="spending_per_month" %}selected{% endif %}>
                    ðŸ›’ Monthly Spending ($)
                </option>
                <option value="inflation" {% if field=="inflation" %}selected{% endif %}>
                    ðŸ’° Inflation Rate (%)
                </option>
                <option value="annual_salary_increase" {% if field=="annual_salary_increase" %}selected{% endif %}>
                    ðŸ“Š Annual Salary Increase (%)
                </option>
                <option value="income_per_month" {% if field=="income_per_month" %}selected{% endif %}>
                    ðŸ’µ Monthly Income ($)
                </option>
                <option value="extra_income" {% if field=="extra_income" %}selected{% endif %}>
                    ðŸ’Ž Extra Monthly Income ($)
                </option>
            </select>
        </div>

        <div class="col-md-5">
            <label class="form-label">
                <i class="fas fa-edit me-1"></i>
                New Value
            </label>
            <input type="number"
                   step="0.1"
                   name="change_values"
                   value="{{ value }}"
                   class="form-control"
                   required
                   placeholder="Enter new value">
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="button"
                    class="btn btn-outline-danger btn-sm remove-parameter-row"
                    hx-delete="/remove-parameter-row"
                    hx-target="closest .parameter-row"
                    hx-swap="outerHTML"
                    hx-push-url="false"
                    title="Remove this parameter"
                    style="display: none;">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    {# Hidden date input only for rows that don't already have the visible date input #}
    {% if not is_first_row %}
    <input type="hidden" name="change_dates" value="{{ date }}">
    {% endif %}
</div>
