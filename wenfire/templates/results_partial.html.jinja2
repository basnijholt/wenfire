<!-- Render Charts -->
<script>
    // Store chart instances for theme switching
    let chartInstances = {
        netWorth: null,
        monthlyFlows: null
    };

    // Function to format currency values in compact notation
    function formatCompactCurrency(val) {
        if (val >= 1000000) {
            return '$' + (val / 1000000).toFixed(val >= 10000000 ? 0 : 1) + 'M';
        } else if (val >= 1000) {
            return '$' + (val / 1000).toFixed(val >= 10000 ? 0 : 0) + 'k';
        } else {
            return '$' + val.toFixed(0);
        }
    }

    // Function to enhance config with JavaScript functions
    function enhanceChartConfig(config) {
        // Add y-axis formatter
        if (config.yaxis && config.yaxis.labels) {
            config.yaxis.labels.formatter = function (val) {
                return formatCompactCurrency(val);
            };
        }

        // Add custom tooltip
        if (config.tooltip) {
            config.tooltip.custom = function({series, seriesIndex, dataPointIndex, w}) {
                const date = new Date(w.globals.seriesX[seriesIndex][dataPointIndex]);
                const age = w.config.series[seriesIndex].data[dataPointIndex].age;
                const timeFromNowText = w.config.series[seriesIndex].data[dataPointIndex].time_from_now_text;

                let tooltip = `
                    <div class="apexcharts-tooltip-title" style="font-family: inherit; font-size: 12px;">
                        ${date.toLocaleDateString()} (Age: ${age.toFixed(1)}, ${timeFromNowText})
                    </div>
                `;

                series.forEach((s, i) => {
                    if (s[dataPointIndex] !== undefined) {
                        const color = w.globals.colors[i];
                        tooltip += `
                            <div class="apexcharts-tooltip-series-group apexcharts-active" style="order: 1; display: flex;">
                                <span class="apexcharts-tooltip-marker" style="background-color: ${color};"></span>
                                <div class="apexcharts-tooltip-text" style="font-family: inherit; font-size: 12px;">
                                    <div class="apexcharts-tooltip-y-group">
                                        <span class="apexcharts-tooltip-text-y-label">${w.globals.seriesNames[i]}: </span>
                                        <span class="apexcharts-tooltip-text-y-value">${formatCompactCurrency(s[dataPointIndex])}</span>
                                    </div>
                                </div>
                            </div>
                        `;
                    }
                });

                return tooltip;
            };
        }

        return config;
    }

    // Function to get current theme
    function getCurrentTheme() {
        return document.documentElement.getAttribute('data-bs-theme') || 'light';
    }

    // Function to render all charts
    function renderCharts() {
        const theme = getCurrentTheme();
        console.log('Rendering charts with theme:', theme);

        try {
            // Check if chart containers exist
            const netWorthContainer = document.querySelector("#age-vs-net-worth-plot");
            const flowsContainer = document.querySelector("#monthly-financial-flows-plot");

            if (!netWorthContainer || !flowsContainer) {
                console.error('Chart containers not found:', {
                    netWorth: !!netWorthContainer,
                    flows: !!flowsContainer
                });
                return;
            }

            // Net Worth Chart
            if (chartInstances.netWorth) {
                chartInstances.netWorth.destroy();
                chartInstances.netWorth = null;
            }

            const netWorthPlotData = {{ age_vs_net_worth_plot | tojson | safe }};
            console.log('Net Worth Plot Data:', netWorthPlotData);

            if (netWorthPlotData && netWorthPlotData.config_light) {
                // Use the pre-generated configuration from Python
                let netWorthConfig = theme === 'dark' ? netWorthPlotData.config_dark : netWorthPlotData.config_light;
                netWorthConfig = enhanceChartConfig(netWorthConfig);

                chartInstances.netWorth = new ApexCharts(netWorthContainer, netWorthConfig);
                chartInstances.netWorth.render().then(() => {
                    console.log('Net Worth chart rendered successfully');
                    // Add double-click to reset zoom
                    netWorthContainer.addEventListener('dblclick', function() {
                        chartInstances.netWorth.resetSeries();
                        const dates = netWorthConfig.series[0].data.map(d => new Date(d.x).getTime());
                        chartInstances.netWorth.zoomX(
                            Math.min(...dates),
                            Math.max(...dates)
                        );
                    });
                }).catch((error) => {
                    console.error('Error rendering Net Worth chart:', error);
                });
            } else {
                console.warn('Net Worth chart data is invalid or empty');
            }

            // Monthly Financial Flows Chart
            if (chartInstances.monthlyFlows) {
                chartInstances.monthlyFlows.destroy();
                chartInstances.monthlyFlows = null;
            }

            const flowsPlotData = {{ monthly_financial_flows_plot | tojson | safe }};
            console.log('Monthly Financial Flows Plot Data:', flowsPlotData);

            if (flowsPlotData && flowsPlotData.config_light) {
                // Use the pre-generated configuration from Python
                let flowsConfig = theme === 'dark' ? flowsPlotData.config_dark : flowsPlotData.config_light;
                flowsConfig = enhanceChartConfig(flowsConfig);

                chartInstances.monthlyFlows = new ApexCharts(flowsContainer, flowsConfig);
                chartInstances.monthlyFlows.render().then(() => {
                    console.log('Monthly Financial Flows chart rendered successfully');
                    // Add double-click to reset zoom
                    flowsContainer.addEventListener('dblclick', function() {
                        chartInstances.monthlyFlows.resetSeries();
                        const dates = flowsConfig.series[0].data.map(d => new Date(d.x).getTime());
                        chartInstances.monthlyFlows.zoomX(
                            Math.min(...dates),
                            Math.max(...dates)
                        );
                    });
                }).catch((error) => {
                    console.error('Error rendering Monthly Financial Flows chart:', error);
                });
            } else {
                console.warn('Monthly Financial Flows chart data is invalid or empty');
            }

        } catch (error) {
            console.error('Error in renderCharts function:', error);
        }
    }

    // Expose chart rendering function globally
    window.renderChartsFromMain = renderCharts;

    // Function to safely render charts with retry mechanism
    function safeRenderCharts() {
        // Wait a bit for the DOM to be fully ready
        setTimeout(() => {
            renderCharts();
        }, 100);
    }

    // Initial chart rendering with delay for HTMX content
    safeRenderCharts();

    // Set up theme change monitoring
    function setupThemeMonitoring() {
        const observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
                if (mutation.type === 'attributes' && mutation.attributeName === 'data-bs-theme') {
                    console.log('Theme changed, re-rendering charts');
                    renderCharts();
                }
            });
        });

        observer.observe(document.documentElement, {
            attributes: true,
            attributeFilter: ['data-bs-theme']
        });

        window.addEventListener('storage', function(e) {
            if (e.key === 'theme') {
                console.log('Theme changed via storage, re-rendering charts');
                renderCharts();
            }
        });
    }

    // Setup theme monitoring immediately
    setupThemeMonitoring();

    console.log('Chart rendering script loaded');
</script>
